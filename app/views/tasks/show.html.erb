<% provide(:title, @user.name) %>

<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered" id="table-user">
      <tbody>
        <tr>
        <th>id</th>
        <td><%= @task.id %></td>
      </tr>
      <tr>
        <th>名称</th>
        <td><%= @task.name %></td>
      </tr>
      <tr>
        <th>詳細</th>
        <td><%= @task.description %></td>
      </tr>
      <tr>
        <th>作成日</th>
        <td><%= @task.created_at %></td>
      </tr>
      <tr>
        <th>更新日</th>
        <td><%= @task.updated_at %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>