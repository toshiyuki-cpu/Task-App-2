<% provide(:title, 'Edit Task') %>

<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user, @task), local: true, method: :patch) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { obj: @task } %>
      
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :description, class: "label-form" %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>
<!-- ルーティング user_task GET    /users/:user_id/tasks/:id(.:format)      tasks#show-->      
      <%= f.submit "更新", class: "btn btn-lg btn-primary btn-form" %>
<!-- ルーティング user_tasks GET    /users/:user_id/tasks(.:format)   tasks#index-->
      <%= link_to 'キャンセル', user_tasks_path(@user, @task), class: "btn btn-lg btn-default" %>
   <% end %>
  </div>
</div>